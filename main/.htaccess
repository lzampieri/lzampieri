<IfModule mod_rewrite.c>

    Options -MultiViews

    RewriteEngine On
    # RewriteBase /main/

    # Allow access to cockpit
    RewriteCond %{REQUEST_URI} !^.*/main/cockpit/.*$
    RewriteCond %{REQUEST_URI} !^.*/main/build/.*$
    # Otherwise, redirect to "build" folder
    RewriteRule ^.*$ build/$0 [L]

</IfModule>